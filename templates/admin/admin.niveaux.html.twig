{% extends "baseadmin.html.twig" %}
{% block body %}
    <form class="form-inline mt-1" method="POST" action="{{ path('admin.niveau.ajout', {champ:'libelle'}) }}">
        <div class="form-group mr-1 mb-2">
            <input type="text" class="sm" name="nom">
        </div>
        <input type="hidden" name="_token" value="{{ csrf_token('filtre_libelle') }}">
        <button type="submit" class="btn btn-info mb-2 btn-sm">Ajouter un nouveau niveau</button>
    </form>
    <table class="table table-striped">
        <tbody>
            {% for niveau in niveaux %}
                <tr>
                    <td>
                        <h5 class="text-info">
                            {{ niveau.libelle }}
                        </h5>
                    </td>
                    <td class="text-center">
                        {% if niveau.formations is empty %}
                            <a href="{{ path('admin.niveau.suppr', {id:niveau.id}) }}" class="btn btn-danger" onclick="return confirm('Etes-vous sûr de vouloir supprimer {{ niveau.libelle }} ?')">Supprimer</a>
                        {% else %}
                            <a href="#" class="btn btn-danger" onclick="alert('Vous ne pouvez pas supprimer ce niveau car il est utilisé par au moins une formation')">Supprimer</a>
                        {% endif %}     
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
